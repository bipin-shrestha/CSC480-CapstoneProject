@{
    ViewData["Title"] = "Send Message Page";
}

@model MessageViewModel

<div class="container-fluid pt-5">
    <div class="container">
        <div class="border-start border-5 border-primary ps-5 mb-5" style="max-width: 600px;">
            <h1 class="display-5 text-uppercase mb-0">Send Message</h1>
        </div>
        <div class="row g-5">
            <div class="col-lg-7">
                <form method="post">
                    <div class="row g-3">
                        <div class="col-12">
                            <input type="hidden" asp-for="RecieverId" value="@ViewBag.ShelterId" />
                            <input type="text" asp-for="SenderName" class="form-control bg-light border-0 px-4" placeholder="Your Name" style="height: 55px;">
                            <span asp-validation-for="SenderName" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <input type="email" asp-for="SenderEmail" class="form-control bg-light border-0 px-4" placeholder="Your Email" style="height: 55px;">
                            <span asp-validation-for="SenderEmail" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <input type="text" asp-for="Subject" class="form-control bg-light border-0 px-4" placeholder="Subject" style="height: 55px;">
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <textarea asp-for="MessageText" class="form-control bg-light border-0 px-4 py-3" rows="8" placeholder="Message"></textarea>
                            <span asp-validation-for="MessageText" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100 py-3" type="submit">Send Message</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>