@{
    ViewData["Title"] = "Shelter SignUp Page";
}

@model SignUpShelterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid pt-5">
    <div class="container">
        <div class="border-start border-5 border-primary ps-5 mb-5" style="max-width: 600px;">
            <h2 class="text-primary text-uppercase">Shelter SignUp</h2>
        </div>
        <div class="row g-5">
            <div class="col-lg-7">
                <form method="post">
                    <div class="row g-3">
                        <div class="col-6">
                            <input type="text" asp-for="ShelterName" class="form-control bg-light border-0 px-4" placeholder="Shelter Name" style="height: 55px;">
                            <span asp-validation-for="ShelterName" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <input type="text" asp-for="Address" class="form-control bg-light border-0 px-4" placeholder="Shelter Address" style="height: 55px;">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <input type="text" asp-for="ShelterLoginEmail" class="form-control bg-light border-0 px-4" placeholder="Username" style="height: 55px;">
                            <span asp-validation-for="ShelterLoginEmail" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <input type="password" asp-for="Password" class="form-control bg-light border-0 px-4" placeholder="Password" style="height: 55px;">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <button class="btn btn-primary w-100 py-3" type="submit">Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>